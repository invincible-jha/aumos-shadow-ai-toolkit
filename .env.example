# =============================================================================
# AumOS Shadow AI Toolkit — Environment Variables
# Copy to .env and fill in values for local development.
# =============================================================================

# ---------------------------------------------------------------------------
# Core AumOS settings (shared across all services)
# ---------------------------------------------------------------------------
AUMOS_DATABASE__URL=postgresql+asyncpg://aumos:aumos_dev@localhost:5432/aumos_shadow_ai
AUMOS_KAFKA__BOOTSTRAP_SERVERS=localhost:9092
AUMOS_SECRET_KEY=dev-secret-key-replace-in-production
AUMOS_ENVIRONMENT=development
AUMOS_LOG_LEVEL=INFO

# ---------------------------------------------------------------------------
# Shadow AI Toolkit — service-specific settings (AUMOS_SHADOW_AI_ prefix)
# ---------------------------------------------------------------------------

# Network scanner
AUMOS_SHADOW_AI_SCAN_INTERVAL_SECONDS=3600
AUMOS_SHADOW_AI_SCAN_TIMEOUT_SECONDS=300
AUMOS_SHADOW_AI_MAX_CONCURRENT_SCANS=5

# Known AI API endpoints for detection (JSON array of domain patterns)
AUMOS_SHADOW_AI_KNOWN_AI_ENDPOINTS=["api.openai.com","api.anthropic.com","api.perplexity.ai","generativelanguage.googleapis.com","api.cohere.com","api.mistral.ai","api.together.xyz","api.replicate.com","api.huggingface.co","api.groq.com"]

# Risk thresholds
AUMOS_SHADOW_AI_RISK_THRESHOLD_CRITICAL=0.7
AUMOS_SHADOW_AI_RISK_THRESHOLD_HIGH=0.5
AUMOS_SHADOW_AI_RISK_THRESHOLD_MEDIUM=0.3

# Migration settings
AUMOS_SHADOW_AI_MIGRATION_EXPIRY_DAYS=90
AUMOS_SHADOW_AI_MIGRATION_SLA_CRITICAL_DAYS=7
AUMOS_SHADOW_AI_MIGRATION_SLA_HIGH_DAYS=30

# Upstream service URLs
AUMOS_SHADOW_AI_GOVERNANCE_ENGINE_URL=http://localhost:8016
AUMOS_SHADOW_AI_MODEL_REGISTRY_URL=http://localhost:8003

# HTTP client
AUMOS_SHADOW_AI_HTTP_TIMEOUT=30.0
AUMOS_SHADOW_AI_HTTP_MAX_RETRIES=3
